@page
@model WebApplication1.Pages.StandartModel
@{
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewData["Title"]</title>
        <style>
            body {
                background-color: #f0f0f0;
                font-family: Arial, sans-serif;
                margin: 0;
                padding: 0;
            }

            .container {
                max-width: 1200px;
                margin: 0 auto;
                padding: 20px;
                display: flex;
                flex-direction: row;
                align-items: flex-start;
                gap: 30px;
            }

            .content {
                flex: 1;
                max-width: 500px;
            }

            .car-list {
                flex: 2;
                display: flex;
                flex-direction: column;
                gap: 20px;
            }

            .car-item {
                background: #fff;
                border-radius: 10px;
                box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
                overflow: hidden;
                text-align: center;
                padding: 20px;
            }

                .car-item img {
                    max-width: 100%;
                    height: auto;
                    margin-bottom: 10px;
                }

                .car-item h2 {
                    font-size: 1.5rem;
                    color: #333;
                }

                .car-item p {
                    font-size: 1rem;
                    color: #666;
                    margin: 10px 0;
                }

                .car-item a {
                    display: inline-block;
                    margin-top: 15px;
                    background: #007bff;
                    color: #fff;
                    text-decoration: none;
                    padding: 10px 20px;
                    border-radius: 5px;
                }

                    .car-item a:hover {
                        background: #0056b3;
                    }
        </style>
    </head>
    <body>
        <div class="container">
            <!-- Text Block -->
            <div class="content">
                <div class="centered-text">
                    <h1>Klasa Standardowa</h1>
                    <p>
                        Zapoznaj się z naszą ofertą samochodów standardowej klasy, idealnych dla tych, którzy szukają komfortu i niezawodności. Wybierz swój model już teraz!
                    </p>
                </div>
            </div>

            <!-- Car List -->
            <section class="car-list">
                <!-- Car 1 -->
                <div class="car-item">
                    <img src="Images/Golf.jpg" alt="Volkswagen Golf">
                    <h2>Volkswagen Golf</h2>
                    <p class="description">Niezawodny, komfortowy i przestronny. Cena od 120 zł/dzień.</p>
                    <ul class="car-details">
                        <li><strong>Rok produkcji:</strong> 2021</li>
                        <li><strong>Kolor:</strong> Czerwony</li>
                        <li><strong>Skrzynia biegów:</strong> Manualna</li>
                        <li><strong>Paliwo:</strong> Benzyna</li>
                        <li><strong>Zużycie paliwa:</strong> 6,0 l/100 km</li>
                    </ul>
                    <a href="/rent?car=VolkswagenGolf">Choose This Car</a>
                </div>

                <!-- Car 2 -->
                <div class="car-item">
                    <img src="Images/Toyota2.jpg" alt="Toyota Corolla">
                    <h2>Toyota Corolla</h2>
                    <p class="description">Stylowy i wydajny, idealny na długie podróże. Cena od 120 zł/dzień.</p>
                    <ul class="car-details">
                        <li><strong>Rok produkcji:</strong> 2020</li>
                        <li><strong>Kolor:</strong> Niebieski</li>
                        <li><strong>Skrzynia biegów:</strong> Automatyczna</li>
                        <li><strong>Paliwo:</strong> Hybryda</li>
                        <li><strong>Zużycie paliwa:</strong> 4,2 l/100 km</li>
                    </ul>
                    <a href="/rent?car=ToyotaCorolla">Choose This Car</a>
                </div>

                <!-- Car 3 -->
                <div class="car-item">
                    <img src="Images/Civic.jpg" alt="Honda Civic">
                    <h2>Honda Civic</h2>
                    <p class="description">Sportowy charakter i niskie zużycie paliwa. Cena od 120 zł/dzień.</p>
                    <ul class="car-details">
                        <li><strong>Rok produkcji:</strong> 2022</li>
                        <li><strong>Kolor:</strong> Czarny</li>
                        <li><strong>Skrzynia biegów:</strong> Manualna</li>
                        <li><strong>Paliwo:</strong> Benzyna</li>
                        <li><strong>Zużycie paliwa:</strong> 5,5 l/100 km</li>
                    </ul>
                    <a href="/rent?car=HondaCivic">Choose This Car</a>
                </div>
            </section>
        </div>
    </body>
    </html>
}
